<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray">
    <RelativeLayout
        android:id="@+id/rl_collects"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/white"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/iv_collections_picture"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/nopic" />

        <ImageView
            android:id="@+id/iv_collections_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/iv_collections_picture"
            android:src="@mipmap/delete"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/tv_collections_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_collections_picture"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="name"
            android:textColor="#000" />
    </RelativeLayout>
</LinearLayout>