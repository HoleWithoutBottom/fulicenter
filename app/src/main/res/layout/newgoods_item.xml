<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#C0C0C0"
    app:cardElevation="5dp"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:layout_margin="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_newGoods"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/category_child" />

        <TextView
            android:id="@+id/tv_newGoods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_newGoods"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="女士高跟鞋"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_newGoods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_newGoods_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="$255"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>